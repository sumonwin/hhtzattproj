<h1>Listing users</h1>
<%= form_tag users_path ,:method => "get" do %>
<table>
  <tr>
    <td>userid</td><td><%= text_field_tag :userid,params[:userid]%></td>
  </tr>
  <tr>
    <td>name</td><td><%= text_field_tag :name,params[:name]%></td>
  </tr>
  <tr>
    <td>team</td><td><%= text_field_tag :team,params[:team]%></td> 
  </tr>
</table>
<%= submit_tag :find%>
<%end%>


<table>
  <tr>
    <th>Userid</th>
    <th>Name</th>
    <th>Dob</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Normaltravelfee</th>
    <th>Gender</th>
    <th>Team</th>
    <th>Nrcnumber</th>
    <th>Year of entry</th>
    <th>Date of entry</th>
    <th>Leaveday</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><center><%= user.userid %></center></td>
    <td><center><%= user.name %></center></td>
    <td><center><%= user.dob %></center></td>
    <td><center><%= user.address %></center></td>
    <td><center><%= user.phone %></center></td>
    <td><center><%= user.normaltravelfee %></center></td>
    <td><% if (user.gender == true)%>
    Male
        <% else %>
              Female
        <%end%>            
    </td>
    <td><center><%= user.team %></center></td>
    <td><center><%= user.NRCnumber %></center></td>
    <td><center><%= user.year_of_entry %></center></td>
    <td><center><%= user.date_of_entry %></center></td>
    <td ><center><%= user.leaveday %></center></td>
    
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br >
<%= will_paginate @users%>
